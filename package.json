    "./src": "./src/index.ts",
    "./styles": "./dist/contentarize.css",
    "./styles.css": "./dist/contentarize.css",
    "./src/tailwind.css": "./src/tailwind.css"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "vite build && tsc",
    "dev": "vite build --watch",
    "test": "vitest",
    "prepublishOnly": "npm run build"
  },
  "sideEffects": [
    "./src/**/*.css"
  ],
