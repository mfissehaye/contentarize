{
  "name": "@mfissehaye/contentarize",
  "version": "0.1.8",
  "description": "Headless CMS editing tools for React applications",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mfissehaye/contentarize.git"
  },
  "homepage": "https://github.com/mfissehaye/contentarize#readme",
  "keywords": [
    "react",
    "cms",
    "headless-cms",
    "content-editor",
